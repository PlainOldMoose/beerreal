# BeerReal Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Database Configuration
# ===================
DB_NAME=beerreal
DB_USERNAME=beerreal
DB_PASSWORD=your-secure-password-here

# ===================
# JWT Configuration
# ===================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-base64-encoded-secret-here

# Optional: JWT expiration in milliseconds (default: 7 days = 604800000)
# JWT_EXPIRATION=604800000

# ===================
# S3/R2 Storage Configuration
# ===================
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# For Cloudflare R2, set the endpoint:
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Public URL for accessing files (optional, for R2 public buckets):
# S3_PUBLIC_URL=https://pub-xxxx.r2.dev

# ===================
# Frontend Configuration
# ===================
# The URL where your frontend will be served
API_URL=http://localhost:8080/api

# ===================
# CORS Configuration
# ===================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000
